    public void MakeBarUpgrade(int gradesCount)
    {
        Env.Instance.Sound.PlaySound(AudioKeys.UI.BarUpgrade);

        Env.Instance.Rooms.MetagameRoom.Controller.UpInteriorToCurrentGrade(
            () =>
            {
                UpdateUpgradeButton();
